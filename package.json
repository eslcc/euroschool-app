{
    "name": "Euroschool",
    "version": "0.0.1",
    "private": true,
    "scripts":
    {
        "start": "node node_modules/react-native/local-cli/cli.js start",
        "lint": "node node_modules/eslint/bin/eslint.js common || true",
        "lintfix": "node node_modules/eslint/bin/eslint.js common --fix || true"
    },
    "dependencies":
    {
        "deep-assign": "^2.0.0",
        "lodash": "^4.15.0",
        "moment": "^2.14.1",
        "react": "^15.3.1",
        "react-native": "^0.32.0",
        "react-native-material-kit": "git+https://github.com/xinthink/react-native-material-kit.git",
        "react-native-orientation": "git+https://github.com/yamill/react-native-orientation.git",
        "react-native-router-flux": "git+https://github.com/aksonov/react-native-router-flux.git",
        "react-redux": "^4.4.5",
        "redux": "^3.6.0",
        "redux-thunk": "^2.1.0"
    },
    "devDependencies":
    {
        "babel-eslint": "^6.1.2",
        "eslint": "^3.4.0",
        "eslint-config-airbnb": "^10.0.1",
        "eslint-plugin-flowtype": "^2.14.3",
        "eslint-plugin-import": "^1.14.0",
        "eslint-plugin-jsx-a11y": "^2.2.0",
        "eslint-plugin-react": "^6.2.0",
        "flow-bin": "^0.32.0",
        "redux-devtools": "^3.3.1"
    },
    "eslintConfig":
    {
        "extends": "airbnb",
        "installedESLint": true,
        "parser": "babel-eslint",
        "parserOptions":
        {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures":
            {
                "jsx": true,
                "impliedStrict": true
            }
        },
        "plugins": ["react"],
        "rules":
        {
            "max-len": ["warn", 80, 4],
            "curly": ["error", "multi-or-nest"],
            "indent": ["warn", 4],
            "react/jsx-indent" : ["warn", 4],
            "react/jsx-indent-props": ["warn", 4],
            "react/jsx-filename-extension": "off",
            "react/jsx-equals-spacing": ["warn", "always"],
            "react/jsx-curly-spacing": ["warn", "always"],
            "global-require": "off",
            "no-global-assign": "off",
            "no-unsafe-negation": "off",
            "linebreak-style": "off",
            "brace-style": ["error", "allman"],
            "arrow-body-style": ["error", "as-needed"]
        },
        "globals":
        {
            "fetch": false
        }
    }
}
