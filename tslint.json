{
	"extends": [
   		"tslint-eslint-rules",
		"tslint-react"
  	],
	"rules": {
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"no-unused-variable": true,
		"curly": true,
		"class-name": true,
		"triple-equals": true,
		"max-line-length": [
			true,
            120
        ],
		"arrow-parens": [true, "ban-single-arg-parens"],
		"brace-style": [
			true,
			"1tbs"
		],
		"ter-indent": [
			true,
			4,
			{
				"SwitchCase": 1
			}
		],
		"object-curly-spacing": [
			true,
			"always"
		],
		"jsx-alignment": true,
		"jsx-wrap-multiline": true,
		"jsx-self-close": true,
		"jsx-no-multiline-js": false,
		"jsx-no-lambda": true,
		"jsx-no-bind": true,
		"jsx-curly-spacing": [true, "never"],
		"jsx-boolean-value": [true, "never"],
		"semicolon": [true, "always"],
		"trailing-comma": [
			true, {
				"multiline": {
				"objects": "always",
				"arrays": "always",
				"functions": "never",
				"typeLiterals": "always"
				}
			}
		]
	}
}